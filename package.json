{
  "name": "opcua-iotagent",
  "license": "AGPL-3.0-only",
  "description": "OPC-UA IoT Agent to interface with NGSI Context Broker",
  "version": "1.1.0",
  "homepage": "https://github.com/Engineering-Research-and-Development/iotagent-opcua",
  "keywords": [
    "fiware",
    "iotagent",
    "ngsi",
    "context broker",
    "opc-ua",
    "opc ua"
  ],
  "author": {
    "name": "Gabriele De Luca",
    "email": "gabriele.deluca@eng.it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Engineering-Research-and-Development/iotagent-opcua.git"
  },
  "bugs": {
    "url": "https://github.com/Engineering-Research-and-Development/iotagent-opcua/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "clean": "rm -rf package-lock.json && rm -rf node_modules && rm -rf coverage",
    "test": "mocha --recursive 'test/unit/*.js' --reporter spec --timeout 3000 --ui bdd --exit",
    "test:watch": "npm run test -- -w ./lib",
    "lint": "eslint . --cache --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write **/*.js *.js",
    "test:coverage": "istanbul cover _mocha -- --recursive 'test/unit/*.js' --reporter spec --exit",
    "test:coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "watch": "watch 'npm test && npm run lint' ./lib ./test"
  },
  "dependencies": {
    "async": "1.5.2",
    "body-parser": "^1.18.3",
    "command-shell-lib": "1.0.0",
    "express": "^4.16.3",
    "handlebars": "^4.0.12",
    "http": "0.0.0",
    "iotagent-node-lib": "2.8.1",
    "jison": "0.4.17",
    "logops": "1.0.0",
    "mongoose": "4.13.11",
    "mu2": "^0.5.20",
    "mustache": "2.2.1",
    "node-opcua": "0.0.61",
    "node-uuid": "^1.4.1",
    "prompt": "*",
    "properties-reader": "0.0.16",
    "request": "2.39.0 - 2.81.0",
    "requirish": "^0.3.0",
    "revalidator": "^0.3.1",
    "sax": "^0.6.0",
    "treeify": "^1.1.0",
    "underscore": "^1.9.1",
    "xmldom": "0.1.19",
    "yargs": "^11.1.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "chai": "3.5.0",
    "closure-linter-wrapper": "1.0.1",
    "eslint": "^5.6.0",
    "eslint-config-tamia": "^6.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.0",
    "istanbul": "~0.1.34",
    "lint-staged": "^7.3.0",
    "mocha": "^2.5.3",
    "nock": "9.0.14",
    "prettier": "^1.14.2",
    "should": "8.4.0",
    "sinon": "1.17.4",
    "sinon-chai": "2.8.0",
    "timekeeper": "0.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --parser flow --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
